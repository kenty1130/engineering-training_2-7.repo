<%= form_for @group do |f| %>
  <p>
    グループ名<%= f.text_field :group_name %>
    <% if @group.errors.messages[:group_name].any? %>
      <span class="error"><%= @group.errors.messages[:group_name][0] %></span>
    <% end %>
  </p>
  <p>
    <%= f.collection_select :users, @users, :id, :email, {include_hidden: false}, {multiple: true} %>
  </p>
  <p>
    <% if f.object.new_record? %>
      <%= f.submit "作成" %>
    <% else %>
      <%= f.submit "編集" %>
    <% end %>
  </p>
<% end %>